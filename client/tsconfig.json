{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@common/*": ["../common/*"],
			"@components": ["./components"],
			"@contexts/*": ["./contexts/*"],
			"@hooks/*": ["./hooks/*"],
			"@screens": ["./screens"],
			"@services/*": ["./services/*"],
			"@error": ["./error"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
